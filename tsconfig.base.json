{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"lib": ["ES2022", "DOM"],
		"moduleResolution": "node16",
		"ignoreDeprecations": "5.0",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"]
}
