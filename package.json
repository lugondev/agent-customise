{
  "name": "agent-customise-monorepo",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm --filter @agent/apps-api dev",
    "dev:api": "cd apps/api && PORT=3002 pnpm dev",
    "dev:web": "cd apps/web && pnpm dev --port 3032",
    "seed:mcp": "pnpm tsx prisma/seed-mcp.ts",
    "test:mcp": "./scripts/test-mcp-api.sh",
    "test:time": "./scripts/test-time-server.sh",
    "build:time": "cd packages/mcp-servers/time-server && pnpm install && pnpm build",
    "lint": "echo 'No lint configured yet'",
    "test": "echo 'No tests yet'"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "prisma": "^6.18.0",
    "tsx": "^4.7.0"
  }
}